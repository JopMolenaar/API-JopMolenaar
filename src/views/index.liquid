{% layout "src/views/layouts/base.liquid" %}

{% block content %}
<main>
  <h1> {{ page }}</h1>
  <form action="#"
    {% if page == "Sign-up" %}
      id="signUp"
    {% else if page == "Log-in"  %}
      id="logIn"
    {% endif %}
  >
    <label>Name:
      <input type="text" name="name">
    </label>
    <button type="submit">{{ page }}</button>
  </form>

{% if page == "Sign-up" %}
  <a href="/login">I already have an account.</a>
{% else if page == "Log-in"  %}
  <a href="/signup">I dont have a account yet.</a>
{% endif %}




    <p>The log in field is not working now so choose an account:</p>
    {% for person in persons %}
      <p>Chat with: <a href="/account/{{ person.id }}">Person {{ person.id }}</a></p>
    {% endfor %} 
</main>
<script src="/js/extraFunctions.js"></script>
<script src="/js/loginSignup.js"></script>
{% endblock %}

