<html lang="en">
<head>
  {% block head %}
    <title>My First Page</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:5173/@vite/client" defer></script>
    <script type="module" src="http://localhost:5173/src/index.js" defer></script>
  {% else %}
  {% comment %} <link rel="stylesheet" href="/main.css"> {% endcomment %}
  {% comment %} <script type="module" src="/main.js" defer></script> {% endcomment %}
  <script type="nomodule" src="/polyfills-legacy.js" defer></script>
  <script type="nomodule" src="/main-legacy.js" defer></script>
  {% endif %}
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/reset.css">
  {% comment %} {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %} {% endcomment %}
</head>

<body>
  {% block content %}{% endblock %}
</body>
<script src="/js/script.js"></script>
<footer>
  {% block footer %}
    <p>@2024 Jop Molenaar</p>
  {% endblock %}
</footer>
</html>
